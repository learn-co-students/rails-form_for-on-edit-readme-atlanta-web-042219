<h1><%= @header_msg %></h1>

<ul>
	<% @post.errors.full_messages.each do |error| %>
		<li style="color: red;"><%= error %></li>
	<% end %>
</ul>

<%= form_for(@post) do |f| %>
  <label>Post title:</label><br>
  <%= f.text_field :title %><br><br>

  <label>Post Description</label><br>
  <%= f.text_area :description %><br><br>

  <%= f.submit @button_msg%>
<% end %>
